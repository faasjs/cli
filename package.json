{
  "name": "@faasjs/cli",
  "version": "0.0.0-alpha.13",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.es.js",
  "bin": {
    "faas": "lib/index.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts --fix src",
    "build": "rm -rf ./lib && rollup -c",
    "test": "jest --expand",
    "doc": "jsdoc2md --files ./lib/index.js > ./API.md",
    "ci": "yarn lint && yarn test --silent",
    "commit": "yarn ci && yarn build && yarn doc"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@faasjs/deployer": "beta",
    "@faasjs/server": "beta",
    "@faasjs/func": "beta",
    "@faasjs/test": "beta",
    "commander": "*"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "compact": false
  },
  "eslintConfig": {
    "extends": [
      "@faasjs/recommended"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testRegex": "/*\\.test\\.ts$",
    "testPathIgnorePatterns": [
      "/lib/"
    ],
    "coveragePathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/__tests__/"
    ]
  }
}
